<Page x:Class="SPIDIdentificationAPI_WPF_Samples.RecordConversationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="RecordConversationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Stop" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Grid.Column="1" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBlock x:Name="tblock" Grid.Column="1" HorizontalAlignment="Left" Margin="10,98,-3,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="32" Width="113"/>
        <Frame x:Name="_speakersListFrame" Grid.Column="0" Margin="5,5,185,0" NavigationUIVisibility="Hidden"/>
        <TextBlock Grid.Column="1" x:Name="output" HorizontalAlignment="Left" Margin="10,135,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="155" Width="100"/>
    </Grid>
</Page>
